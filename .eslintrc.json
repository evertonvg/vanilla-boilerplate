{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "unused-imports"
    ],
    "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "unused-imports/no-unused-imports": "warn",
        "prefer-const": "warn",
        "eqeqeq": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "no-var": "error",
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1
            }
        ],
        "no-trailing-spaces": "warn",
        "object-shorthand": [
            "warn",
            "always"
        ]
    },
    "ignorePatterns": [
        "dist",
        "node_modules",
        "public"
    ]
}
<div
  x-data="toast()"
  x-init="init()"
  class="toast-container"
>
  <template x-for="item in items" :key="item.id">
    <div
      class="toast"
      :class="`toast--${item.type}`"
      x-show="item.visible"
      x-transition
      role="status"
      aria-live="polite"
    >
      <div class="toast__content">
        <strong class="toast__title" x-text="item.title"></strong>
        <p class="toast__message" x-text="item.message"></p>
      </div>

      <button
        class="toast__close"
        @click="remove(item.id)"
        aria-label="Fechar notificação"
      >
        ✕
      </button>
    </div>
  </template>
</div>

---
export interface Props {
    as?: keyof HTMLElementTagNameMap;
    size?: "xs" | "sm" | "md" | "lg" | "xl";
    weight?: "light" | "regular" | "medium" | "bold";
    color?: "base" | "muted" | "inverse" | "primary" | "danger";
    align?: "left" | "center" | "right";
    highlight?: boolean;
    class?: string;
}

const {
    as = "p",
    size = "md",
    weight = "regular",
    color = "base",
    align = "left",
    highlight = false,
    class: className = "",
} = Astro.props;
---

<component
    is={as}
    class={`text text--${size} text--${weight} text--${color} text--align-${align} ${highlight ? "text--highlight" : ""} ${className}`}
>
    <slot />
</component>
